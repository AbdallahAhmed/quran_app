<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dotdev.quran" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quran</name>
    <description>
        Quran contests for everyone
    </description>
    <author email="basemkhirat@gmail.com" href="http://dotdev.com.eg">
        Dotdev Team
    </author>
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <platform name="android">
        <content src="android.html" />
        <resource-file src="resources/android/custom/notification_icon.png" target="res/drawable/notification_icon.png" />
        <preference name="KeepRunning" value="false" />
        <preference name="KeyboardResize" value="true" />
        <preference name="KeyboardResizeMode" value="body" />
        <splash density="land-hdpi" src="res/android/splash/drawable-land-hdpi.png" />
        <splash density="land-ldpi" src="res/android/splash/drawable-land-ldpi.png" />
        <splash density="land-mdpi" src="res/android/splash/drawable-land-mdpi.png" />
        <splash density="land-xhdpi" src="res/android/splash/drawable-land-xhdpi.png" />
        <splash density="port-hdpi" src="res/android/splash/drawable-port-hdpi.png" />
        <splash density="port-ldpi" src="res/android/splash/drawable-port-ldpi.png" />
        <splash density="port-mdpi" src="res/android/splash/drawable-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/android/splash/drawable-port-xhdpi.png" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <content src="ios.html" />
        <preference name="KeychainAccessibility" value="WhenUnlocked" />
        <preference name="AllowInlineMediaPlayback" value="true" />
        <preference name="UIWebViewDecelerationSpeed" value="fast" />
        <preference name="SuppressesIncrementalRendering" value="true" />
        <preference name="MediaPlaybackRequiresUserAction" value="false" />
        <preference name="BackupWebStorage" value="none" />
        <preference name="WKSuspendInBackground" value="false" />
        <preference name="WKBind" value="localhost" />
        <preference name="WKInternalConnectionsOnly" value="true" />
    </platform>
    <preference name="WKPort" value="8080" />
    <preference name="SplashScreenDelay" value="4000" />
    <preference name="SplashScreenBackgroundColor" value="#ffffff" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ffffff" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <plugin name="cordova-plugin-nativeclicksound" spec="0.0.3" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.4.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^3.2.2" />
    <plugin name="cordova-plugin-firebase" spec="^0.1.25" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-local-notification" spec="^0.9.0-beta.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-ionic-webview" spec="^2.2.0">
        <variable name="ANDROID_SUPPORT_ANNOTATIONS_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-ionic-keyboard" spec="2.1.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-media" spec="^5.0.2">
        <variable name="KEEP_AVAUDIOSESSION_ALWAYS_ACTIVE" value="NO" />
    </plugin>
    <engine name="browser" spec="^5.0.4" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^6.4.0" />
</widget>
